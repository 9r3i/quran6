1548; &#1601;&#1614;&#1571;&#1614;&#1585;&#1618;&#1587;&#1614;&#1604;&#1614; &#1573;&#1616;&#1604;&#1614;&#1610;&#1618;&#1606;&#1614;&#1575; &#1573;&#1616;&#1604;&#1614;&#1609; &#1571;&#1614;&#1606;&#1618; &#1608;&#1614;&#1602;&#1614;&#1601;&#1618;&#1606;&#1614;&#1575; &#1576;&#1614;&#1610;&#1618;&#1606;&#1614; &#1610;&#1614;&#1583;&#1614;&#1610;&#1618;&#1607;&#1616;&#1548; \r\n&#1601;&#1614;&#1602;&#1614;&#1575;&#1604;&#1614; &#1585;&#1614;&#1587;&#1615;&#1608;&#1604;&#1615; &#1575;&#1604;&#1604;&#1617;&#1614;&#1607;&#1616; &#1589;&#1614;&#1604;&#1617;&#1614;&#1609; &#1575;&#1604;&#1604;&#1617;&#1614;&#1607;&#1615; &#1593;&#1614;&#1604;&#1614;&#1610;&#1618;&#1607;&#1616; &#1608;&#1614;&#1587;&#1614;&#1604;&#1617;&#1614;&#1605;&#1614;: \"&#1571;&#1614;&#1610;&#1617;&#1615;&#1603;&#1615;&#1605;&#1615; &#1575;&#1604;&#1617;&#1614;&#1584;&#1616;&#1610; \r\n&#1587;&#1605;&#1593;&#1578;&#1615; &#1589;&#1614;&#1608;&#1618;&#1578;&#1614;&#1607;&#1615; &#1602;&#1614;&#1583;&#1616; &#1575;&#1585;&#1618;&#1578;&#1614;&#1601;&#1614;&#1593;&#1614;&#1567; \" &#1601;&#1614;&#1571;&#1614;&#1588;&#1614;&#1575;&#1585;&#1614; &#1575;&#1604;&#1618;&#1602;&#1614;&#1608;&#1618;&#1605;&#1615; &#1603;&#1615;&#1604;&#1617;&#1615;&#1607;&#1615;&#1605;&#1618; &#1573;&#1616;&#1604;&#1614;&#1610;&#1617;&#1614;&#1548; \r\n&#1608;&#1614;&#1589;&#1614;&#1583;&#1614;&#1602;&#1615;&#1608;&#1575;&#1548; &#1601;&#1614;&#1571;&#1614;&#1585;&#1618;&#1587;&#1614;&#1604;&#1614; &#1603;&#1604;&#1617;&#1614;&#1607;&#1605; &#1608;&#1614;&#1581;&#1614;&#1576;&#1614;&#1587;&#1614;&#1606;&#1616;&#1610;. &#1608;&#1614;&#1602;&#1614;&#1575;&#1604;&#1614; \"&#1602;&#1615;&#1605;&#1618; &#1601;&#1614;&#1571;&#1614;&#1584;&#1617;&#1616;&#1606;&#1618; \r\n&#1576;&#1616;&#1575;&#1604;&#1589;&#1617;&#1614;&#1604;&#1614;&#1575;&#1577;&#1616;\". &#1601;&#1614;&#1602;&#1615;&#1605;&#1618;&#1578;&#1615; &#1608;&#1614;&#1604;&#1614;&#1575; &#1588;&#1614;&#1610;&#1618;&#1569;&#1614; &#1571;&#1614;&#1603;&#1618;&#1585;&#1614;&#1607;&#1615; &#1573;&#1616;&#1604;&#1614;&#1610;&#1617;&#1614; &#1605;&#1616;&#1606;&#1618; &#1585;&#1614;&#1587;&#1615;&#1608;&#1604;&#1616; &#1575;&#1604;&#1604;&#1617;&#1614;&#1607;&#1616; \r\n&#1589;&#1614;&#1604;&#1617;&#1614;&#1609; &#1575;&#1604;&#1604;&#1617;&#1614;&#1607;&#1615; &#1593;&#1614;&#1604;&#1614;&#1610;&#1618;&#1607;&#1616; &#1608;&#1614;&#1587;&#1614;&#1604;&#1617;&#1614;&#1605;&#1614;&#1548; &#1608;&#1614;&#1604;&#1614;&#1575; &#1605;&#1616;&#1605;&#1617;&#1614;&#1575; &#1610;&#1614;&#1571;&#1618;&#1605;&#1615;&#1585;&#1615;&#1606;&#1616;&#1610; &#1576;&#1616;&#1607;&#1616; &#1601;&#1614;&#1602;&#1615;&#1605;&#1618;&#1578;&#1615; &#1576;&#1614;&#1610;&#1618;&#1606;&#1614; \r\n&#1610;&#1614;&#1583;&#1614;&#1610;&#1618; &#1585;&#1614;&#1587;&#1615;&#1608;&#1604;&#1616; &#1575;&#1604;&#1604;&#1617;&#1614;&#1607;&#1616; &#1589;&#1614;&#1604;&#1617;&#1614;&#1609; &#1575;&#1604;&#1604;&#1617;&#1614;&#1607;&#1615; &#1593;&#1614;&#1604;&#1614;&#1610;&#1618;&#1607;&#1616; &#1608;&#1614;&#1587;&#1614;&#1604;&#1617;&#1614;&#1605;&#1614;&#1548; &#1601;&#1614;&#1571;&#1614;&#1604;&#1618;&#1602;&#1614;&#1609; &#1593;&#1614;&#1604;&#1614;&#1610;&#1617;&#1614; \r\n&#1585;&#1614;&#1587;&#1615;&#1608;&#1604;&#1615; &#1575;&#1604;&#1604;&#1617;&#1614;&#1607;&#1616; &#1589;&#1614;&#1604;&#1617;&#1614;&#1609; &#1575;&#1604;&#1604;&#1617;&#1614;&#1607;&#1615; &#1593;&#1614;&#1604;&#1614;&#1610;&#1618;&#1607;&#1616; &#1608;&#1614;&#1587;&#1614;&#1604;&#1617;&#1614;&#1605;&#1614; &#1575;&#1604;&#1578;&#1617;&#1614;&#1571;&#1618;&#1584;&#1616;&#1610;&#1606;&#1614; &#1607;&#1615;&#1608;&#1614; &#1576;&#1616;&#1606;&#1614;&#1601;&#1618;&#1587;&#1616;&#1607;&#1616;&#1548; \r\n&#1602;&#1614;&#1575;&#1604;&#1614;: \"&#1602;&#1615;&#1604;&#1616; &#1575;&#1604;&#1604;&#1617;&#1614;&#1607;&#1615; &#1571;&#1614;&#1603;&#1618;&#1576;&#1614;&#1585;&#1615;&#1548; &#1575;&#1604;&#1604;&#1617;&#1614;&#1607;&#1615; &#1571;&#1614;&#1603;&#1618;&#1576;&#1614;&#1585;&#1615;&#1548; &#